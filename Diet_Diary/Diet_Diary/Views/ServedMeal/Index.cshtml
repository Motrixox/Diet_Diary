@using Microsoft.AspNetCore.Identity;
@using AspNetCore.Identity.Mongo.Model;
@inject SignInManager<MongoUser> SignInManager
@inject UserManager<MongoUser> UserManager
@model IEnumerable<Diet_Diary.Models.Meal>

@{
	ViewData["Title"] = "ServedMeals";
	string subTitle = $"Displaying stored meals for logged in user ({User.Identity.Name})";
}

<div>
	<h1>What did you have today?</h1>
	<p>@subTitle</p>
	<p>
		<a asp-action="Index">Create New</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Products)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Products)
					</td>
					<td>
						<a asp-action="Create" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Choose</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

